<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Binding.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:Binding.Models"
    x:DataType="models:Student">


    <StackLayout>
        <Button
            x:Name="changeName"
            Text ="Change name"
            Background="CadetBlue"
            FontSize="30"
            HeightRequest="50"
            HorizontalOptions="Center"
            Clicked="ChangeName"
            />
        <Label x:Name="Lbl" Text="{Binding Name}" />
        <Label x:Name="Lbl2" Text="{Binding Age}" />


    </StackLayout>

</ContentPage>
