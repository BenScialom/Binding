<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Binding.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">


    <StackLayout>
        <Button
            x:Name="btn"
            Background="Beige"
            FontSize="30"
            HeightRequest="50"
            Text="כפתור" />
        <Label x:Name="Lbl" Text="Ben" />
        <Slider
            x:Name="opacitySlider"
            Margin="0,100,0,0"
            BindingContext="{x:Reference Lbl}"
            Maximum="1.0"
            Minimum="0.0"
            Value="{Binding Opacity, Mode=TwoWay}" />
        <Slider
            x:Name="heightSlider"
            BackgroundColor="CadetBlue"
            BindingContext="{x:Reference btn}"
            Maximum="360"
            Minimum="0"
            Value="{Binding HeightRequest, Mode=TwoWay}" />
    </StackLayout>

</ContentPage>
